<h1>Accounts</h1>
<%= link_to 'Add new account', new_account_path, class: 'btn btn-primary pull-right' %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>
        Name
        <%= link_to accounts_path(sort_items: sort_params(@sort_strategy)) do %>
            <%= content_tag(:span, "", :class => glyph_chevron(@sort_strategy) ) %>
        <% end %>
      </th>
      <th>Actual sum</th>
      <th>Critical amount</th>
      <th>Send notifications?</th>
      <th>Show transactions</th>
      <th></th>
    </tr>
  </thead>
  <%= render @accounts %>
</table>