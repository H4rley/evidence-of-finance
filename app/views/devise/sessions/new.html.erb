<h2 class="block-heading">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'reg-form'}) do |f| %>
  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control reg-inputs" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control reg-inputs" %>
  </div>

  <div class="actions ">
    <%= f.submit "Log in", class: 'btn btn-default' %>
  </div>
<% end %>