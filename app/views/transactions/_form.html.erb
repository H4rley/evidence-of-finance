<%= form_for(transaction, url: account_transactions_path(account, transaction)) do |f| %>
    <p>
      <% transaction.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    </p>

    <p>
      <%= f.label :movement %><br>
      <%= f.select :movement, ['input', 'output'] %>
    </p>

    <p>
      <%= f.label :amount %><br>
      <%= f.text_field :sum %>
    </p>

    <p>
      <%= f.label :purpose %><br>
      <%= f.text_field :purpose %>
    </p>

    <p>
      <%= f.label :category %><br>
      <%= f.select :category_id, Category.all.map{|cat| [cat.name, cat.id]} %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>
<%= link_to 'Back', account_transactions_path %>