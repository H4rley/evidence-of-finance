<h1>
  <%= "Transactions on account #{@account.name}" %>
</h1>
<%= link_to 'Add new transaction', new_account_transaction_path, class: 'btn btn-primary pull-right' %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>User name</th>
      <th>
        Created at
        <%= link_to account_transactions_path(sort_items: sort_params(@sort_strategy)) do %>
            <%= content_tag(:span, "", :class => glyph_chevron(@sort_strategy) ) %>
        <% end %>
      </th>
      <th>Purpose</th>
      <th>Sum</th>
      <th>Category</th>
    </tr>
  </thead>
  <%= render @transactions %>
</table>